<% provide :title, "Chỉnh sửa thông tin" %>
<section class="content-header">
  <h1>
    Chỉnh sửa sản phẩm
  </h1>
</section>
<section class="content">
  <div class="row">
    <%= form_for [:admin, @product] do |f| %>
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-12">
            <label class="control-label"> Tên sản phẩm</label>
            <%= f.text_field :name, class: "form-control", placeholder: "Tên sản phẩm" %>
          </div>
          <div class="form-group col-md-12">
            <label class ="productDetails">Thông tin chi tiết sản phẩm</label>
            <div class="trumbowyg-box">
              <%= f.text_area :description, class: "tinymce", :rows => 20, :cols => 120 %>
             <div class="trumbowyg-overlay"></div>
           </div>
          </div>
          <div class="form-group col-md-12">
            <label class ="productDetails">Dữ liệu sản phẩm</label>
            <div class="price-box clearfix">
                <div class="col-md-6 mb-3">
                  <label for="validationCustom01">Gia san pham (VND)</label>
                  <%= f.text_field :price, class: "form-control" %>
                </div>
                <div class="col-md-6 mb-3 focused">
                  <label for="validationCustom02">Gia khuyen mai (VND)</label>
                  <%= f.text_field :sale_price, class: "form-control" %>
                </div>
            </div>
          </div>
          <div class="form-group col-md-12">
            <label class ="productDetails">Mô tả ngắn sản phẩm</label>
            <div class="trumbowyg-box">
             <!--  <textarea class="form-control p-t-40 editor trumbowyg-textarea" id="productDetails" placeholder="Write Something..." rows="17" required="" tabindex="-1" style="height: 260px;"></textarea> -->
              <div class="trumbowyg-overlay"></div>
            </div>
            <div class="invalid-feedback">
              Please provide a product details.
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mt-4">
          <h6 class="card-header white">Cập nhật sản phẩm</h6>
          <div class="card-footer bg-transparent">
            <%= f.submit "Cập nhật", class: "btn btn-primary" %>
          </div>
        </div>
        <div class="card mt-4">
          <h6 class="card-header white">Trạng thái sản phẩm</h6>
          <div class="card-footer bg-transparent">
            <%= f.select :status, options_for_select(["Select...","Published", "Not Published"]),
            {},class: "form-control" %>
          </div>
        </div>
        <div class="card mt-4">
          <h6 class="card-header white">Danh mục sản phẩm</h6>
          <div class="card-footer list-category">
            <%= f.collection_check_boxes :category_ids,
            Category.all, :id, :name do |category| %>
              <ul class="select-category">
                <li>
                  <%= category.check_box %>
                  <%= category.label %>
                </li>
              </ul>
            <% end %>
          </div>
        </div>
        <div class="card mt-4">
          <h6 class="card-header white">Hình ảnh sản phẩm</h6>
          <div class="card-footer bg-transparent">
            <%= image_tag @product.image.url, class: "image_product_admin" %>
            <%= f.file_field :image %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

