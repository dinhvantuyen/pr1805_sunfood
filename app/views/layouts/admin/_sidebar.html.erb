 <aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "admin/user2-160x160.jpg", class: "img-circle" %>
      </div>
      <div class="pull-left info">
        <p>Alexander Pierce</p>
        <%= link_to "#" do %>
          <i class="fa fa-circle text-success"></i> Online
        <% end %>
      </div>
    </div>
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
          <button type="submit" name="search" id="search-btn" class="btn btn-flat">
            <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    </form>
    <ul class="sidebar-menu">
      <li class="header">MAIN NAVIGATION</li>
      <li class="treeview-dashboard">
        <%= link_to admin_root_path do %>
          <i class="fa fa-dashboard"></i>
          <span>Dashboard</span>
        <% end %>
      </li>
      <li class="treeview">
        <%= link_to "#" do %>
          <i class="fa fa-shopping-cart" aria-hidden="true"></i>
          <span>Sản phẩm</span>
          <i class="fa fa-angle-left pull-right"></i>
        <% end %>
        <ul class="treeview-menu">
          <li>
            <%=link_to "Sản phẩm", admin_products_path %>
          </li>
          <li>
            <%=link_to "Tạo mới sản phẩm", new_admin_product_path %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <%= link_to "#" do %>
          <i class="fa fa-laptop"></i>
          <span>Danh mục</span>
          <i class="fa fa-angle-left pull-right"></i>
        <% end %>
        <ul class="treeview-menu">
          <li>
            <%= link_to "Tất cả chuyên mục", "#" %>
          </li>
          <li>
            <%= link_to "Tạo mới", "#" %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <%= link_to "#" do %>
          <i class="fa fa-edit"></i>
          <span>Order</span>
          <i class="fa fa-angle-left pull-right"></i>
        <% end %>
        <ul class="treeview-menu">
          <li>
            <%= link_to "#" do %>
              Info Order
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <%= link_to "#" do %>
          <i class="fa fa-user" aria-hidden="true"></i> <span>Quản lý người dùng</span>
          <i class="fa fa-angle-left pull-right"></i>
        <% end %>
        <ul class="treeview-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-circle-o"></i> Tất cả người dùng
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-circle-o"></i> Tạo mới người dùng
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview-chart">
        <%= link_to "#" do %>
          <i class="fa fa-circle-o"></i>
          <span>Thống kê  </span>
        <% end %>
      </li>
    </ul>
  </section>
</aside>
